.page-header
  %h1 User Directory

%table
  %thead
    %tr
      %th Name
      %th Location
  %tbody
    %h1= @users.length
    - @users.each do |user|
      %tr
        %td= link_to(user.email, user_path(user))
    - @users.each do |user|
      - if user.full_name
        %tr
          %td= link_to(user.full_name, user_path(user))
      - else
        %tr
          %td= link_to(user.email)
        %td= format_user_location(user.location)